% Vector differentials as used in John and Barbara Hubbard's Vector Calculus
% `\vdif{x,y,z}` gives |dx dy dz|
% `\vdif[2,n,1]{x,y,z}` gives |d^2x d^ny dz|
% `\vdif*` typesets variables as scalars
\newcommand*{\__pccommon_maybevect}[2]{\IfBooleanTF{#1}{#2}{\vect{#2}}}
% In Python I would use `zip`...
\int_new:N \l__pccommon_varidx_int
\NewDocumentCommand{\vdif}{s o m}{
    \abs{\IfNoValueTF{#2}
        % No orders
        {\clist_map_inline:nn{#3}{\odif{\__pccommon_maybevect{#1}{##1}}}}
        % Has orders
        {\ifnum\clist_count:n{#3}=\clist_count:n{#2}
            % Correct alignment
            {
                \int_set:Nn \l__pccommon_varidx_int {1}
                \clist_map_inline:nn{#2}{
                    \ifx1##1
                        % Skip if order is 1
                        \odif{\__pccommon_maybevect{#1}{\clist_item:nn{#3}{\l__pccommon_varidx_int}}}
                    \else
                        \odif[order={##1}]{\__pccommon_maybevect{#1}{\clist_item:nn{#3}{\l__pccommon_varidx_int}}}
                    \fi
                    \int_incr:N \l__pccommon_varidx_int
                }
            }
        \else
            \PackageError{pccommon}{Orders~mismatch~variables}{}
        \fi}}
}
% Elementary differential forms:
% `\dform{1,2,3}` gives dx_1 dx_2 dx_3
% `\dform[x,y,z]{1,2,3}` gives dx_1 dy_2 dz_3
% `\dform*{x,y,z}` gives dx dy dz
% Package option `dformwedge` to print \wedge between 1-forms
% Helper function  i :-> \odif{x_i}
\newcommand{\__pccommon_odifxidx}[1]{\odif{x\c_math_subscript_token{#1}}}
\tl_new:N \l__pccommon_dform_first_tl
\clist_new:N \l__pccommon_dform_tail_clist
% latex3 args: nn
\NewDocumentCommand{\dform}{s o m}{
    % Pop the first one in #3 for inserting wedge
    \clist_set:Nn \l__pccommon_dform_tail_clist {#3}
    \clist_pop:NN \l__pccommon_dform_tail_clist \l__pccommon_dform_first_tl
    \IfBooleanTF{#1}
        % Variable names mode (simple)
        {
            % First one
            \exp_args:NV\odif\l__pccommon_dform_first_tl
            % Rest
            \clist_map_inline:Nn\l__pccommon_dform_tail_clist{\pccommon@dformwedge\odif{##1}}
        }
        % Indices mode
        {
            \IfNoValueTF{#2}
                % No variable names, use x
                {
                    \exp_args:NV\__pccommon_odifxidx\l__pccommon_dform_first_tl
                    \clist_map_inline:Nn\l__pccommon_dform_tail_clist{\pccommon@dformwedge\__pccommon_odifxidx{##1}}
                }
                % Has variable names
                {\ifnum\clist_count:n{#2}=\clist_count:n{#3}
                    % Correct alignment
                    {
                        \odif{{\clist_item:nn{#2}{1}}\c_math_subscript_token{\l__pccommon_dform_first_tl}}
                        \int_set:Nn \l__pccommon_varidx_int {2}
                        \clist_map_inline:Nn\l__pccommon_dform_tail_clist{
                            \pccommon@dformwedge
                            \odif{{\clist_item:nn{#2}{\l__pccommon_varidx_int}}\c_math_subscript_token{##1}}
                            \int_incr:N \l__pccommon_varidx_int
                        }
                    }
                \else
                    \PackageError{pccommon}{Variables~mismatch~indices}{}
                \fi}
        }
}
